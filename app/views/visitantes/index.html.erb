<div class="container mt-5 text-center">
  <p style="color: #28a745;"><%= notice %></p>
  <h1 style="color: #28a745;">Visitantes</h1>

  <!-- Adicionando o papel do usuÃ¡rio no canto superior esquerdo -->
  <div style="position: absolute; top: 0; left: 0; margin: 10px; background-color: #fff; padding: 5px;">
    <%= current_user.role_humanize %>
  </div>

  <div id="visitantes" class="d-flex flex-row align-items-center">
    <% @visitantes.each do |visitante| %>
      <div class="card-body">
        <%= render visitante %>
        <p class="mt-3">
          <%= link_to "Mostrar este visitante", visitante, class: "btn btn-success btn-sm" %>
        </p>
      </div>
    <% end %>
  </div>

  <div class="d-flex flex-column align-items-center mt-3">
    <% if current_user.administrador? || current_user.atendente? %>
      <%= link_to "Novo visitante", new_visitante_path, class: "btn btn-primary mb-2" %>
    <% end %>
    <%= link_to "Inicio", '/', class: "btn btn-primary" %>
  </div>

</div>
